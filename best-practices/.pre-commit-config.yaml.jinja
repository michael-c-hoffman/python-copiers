repos:
  - repo: local
    hooks:
      - id: pylint
        name: pylint
        entry: poetry run pylint .
        always_run: true
        pass_filenames: false
      - id: black
        name: black
        entry: poetry run black .
        always_run: true
        pass_filenames: false
      - id: isort
        name: isort
        entry: poetry run isort
        always_run: true
        pass_filenames: true
